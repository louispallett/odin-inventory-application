extends layout

block content 
    div.content-title
        div
            h1=title
            h2=category.name
    hr
    if category_items.length
        each item in category_items 
            dt 
                a.list-item(href=item.url)
                    p #[strong #{item.name}]
                    p Â£#{item.price}
            dd=item.description
    else 
        p This category has no items!
    hr
    p
        a(href=category.url+'/delete' tabindex='-1') 
            button Delete Category
    p
        a(href=category.url+'/update' tabindex='-1') 
            button Update Category
